<label>
  label:
  <input type="text" name="name" value="<%= model.escape('name') %>" autofocus />
</label>

<label>
  type:
    <input
      name="field_type"
      type="text"
      value="<%= model.escape('field_type') %>"
      readonly
    />
</label>

<label>
  default value:
  <input
    name="value"
    type="text"
    value="<%= model.escape('value') %>"
  />
</label>

<button class="delete-button red-button">Delete Field</button>
