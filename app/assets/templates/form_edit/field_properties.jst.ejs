<label>
  label:
  <input type="text" name="name" value="<%= model.escape('name') %>" autofocus />
</label>

<label>
  type: <div class="field_type"><%= model.escape('field_type') %></div>
</label>

<% if (!model.hasChildren()) { %>
  <label>
    default value:
    <input
      name="value"
      type="text"
      value="<%= model.escape('value') %>"
    />
  </label>
<% } else { %>
  <div class="field-children">
    <div class="item-header clearfix">
      <h3 class="heading">Choices</h3>
      <button class="large-button add-child add-item">New Choice</button>
    </div>
    <ul class="children-table">
    </ul>
  </div>
<% } %>

<button class="delete-button danger-button">Delete Field</button>

<ul class="advanced-settings">
  <li><a href="javascript:void(0);" class="toggle-advanced-settings">Advanced Settings</a></li>
  <li class="none">
    <a href="javascript:void(0);" class="toggle-advanced-settings">Close Advanced Settings</a>

    <label>Hovertext <input></label>
    <label>CSS Tags <input></label>
  </li>
</ul>
